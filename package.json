{
    "name": "template-node-express-ts",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon",
        "start": "ts-node src/server.ts",
        "type-check": "tsc --noEmit",
        "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
    },
    "lint-staged": {
        "*.ts": [
            "yarn run lint --fix"
        ],
        "**/*": "prettier --write --ignore-unknown"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn type-check && lint-staged"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CarlosZoft/template-node-express-ts.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/CarlosZoft/template-node-express-ts/issues"
    },
    "homepage": "https://github.com/CarlosZoft/template-node-express-ts#readme",
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^17.0.21",
        "@types/typescript": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^5.14.0",
        "@typescript-eslint/parser": "^5.14.0",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.5",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.2"
    },
    "dependencies": {
        "express": "^4.17.3"
    }
}
